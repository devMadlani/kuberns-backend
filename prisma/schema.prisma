// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(uuid())
  email          String?  @unique
  password       String?
  emailVerified  Boolean  @default(false)
  emailOtpHash   String?
  emailOtpExpiry DateTime?
  githubId       String?  @unique
  githubUsername String?
  githubToken    String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  webApps        WebApp[]
}

model WebApp {
  id            String        @id @default(uuid())
  name          String
  userId        String
  region        String
  plan          String
  framework     String
  repoProvider  String
  repoOwner     String
  repoName      String
  defaultBranch String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  user          User          @relation(fields: [userId], references: [id])
  environments  Environment[]
  deployments   Deployment[]

  @@unique([userId, name])
  @@index([userId])
}

model Environment {
  id          String       @id @default(uuid())
  webAppId    String
  name        String
  branch      String
  port        Int
  envVars     Json
  status      String
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  webApp      WebApp       @relation(fields: [webAppId], references: [id])
  instance    Instance?
  deployments Deployment[]

  @@index([webAppId])
}

model Instance {
  id            String      @id @default(uuid())
  environmentId String      @unique
  cpu           Int
  ram           Int
  storage       Int
  instanceType  String
  status        String
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  environment   Environment @relation(fields: [environmentId], references: [id])
}

model Deployment {
  id            String       @id @default(uuid())
  webAppId      String
  environmentId String
  status        String
  startedAt     DateTime?
  finishedAt    DateTime?
  errorMessage  String?
  createdAt     DateTime     @default(now())
  webApp        WebApp       @relation(fields: [webAppId], references: [id])
  environment   Environment  @relation(fields: [environmentId], references: [id])

  @@index([webAppId])
  @@index([environmentId])
}
